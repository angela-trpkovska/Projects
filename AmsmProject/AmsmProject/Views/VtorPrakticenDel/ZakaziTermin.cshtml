@model AmsmProject.Models.PracticalPart2

@{
    ViewBag.Title = "ZakaziTermin";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

      @Html.ValidationSummary(true)
    <p style="color:gray">hidden</p>
        <h4><center><strong>Страна за закажување на термин за полагање на вториот практичен дел за добивање на возачка дозвола</strong></center></h4>
