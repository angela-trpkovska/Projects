@model AmsmProject.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}



@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <p style="color:gray">bhfdghfdh</p>
    <h4><center><strong>Креирајте свој профил за возачка дозвола</strong></center></h4>
    <hr />
    @Html.ValidationSummary(true)
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-7">
            <form class="form-horizontal">
                <p style="color:red"><center><b>@ViewBag.Message</b></center></p>
                <div class="form-group">
                    <label for="inputName" class="control-label col-xs-4">Матичен број</label>
                    <div class="col-xs-8">
                        @Html.TextBoxFor(m => m.EMBG, new { @class = "form-control" ,placeholder = "Матичен број" })
                        @Html.ValidationMessageFor(model => model.EMBG)

                    </div>
                </div>

                <div class="form-group">
                    <label for="inputName" class="control-label col-xs-4">Име</label>
                    <div class="col-xs-8">
                        @Html.TextBoxFor(m => m.firstName, new { @class = "form-control" ,placeholder = "Име"})
                        @Html.ValidationMessageFor(model => model.firstName)
                    </div>
                </div>


                <div class="form-group">
                    <label for="inputName" class="control-label col-xs-4">Татково име</label>
                    <div class="col-xs-8">
                        @Html.TextBoxFor(m => m.parentName, new { @class = "form-control", placeholder = "Татково име"})
                        @Html.ValidationMessageFor(model => model.parentName)
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputName" class="control-label col-xs-4">Презиме</label>
                    <div class="col-xs-8">
                        @Html.TextBoxFor(m => m.lastName, new { @class = "form-control",placeholder = "Презиме" })
                        @Html.ValidationMessageFor(model => model.lastName)
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputName" class="control-label col-xs-4">Категорија</label>
                    <div class="col-xs-8">
                        @Html.DropDownListFor(x => x.category, new[] {
                                      new SelectListItem() {Text = "А",Value = "A"},
                                      new SelectListItem() {Text = "Б",Value ="B"},
                                      new SelectListItem() {Text = "Ц,Ц1",Value ="C"},
                                      new SelectListItem() {Text = "М,Ф,Г",Value = "MFG"},
                                       new SelectListItem() {Text = "Д,Д1",Value = "D"}})


                        @Html.ValidationMessageFor(model => model.category)
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputName" class="control-label col-xs-4">Автошкола</label>
                    <div class="col-xs-8">
                        @Html.TextBoxFor(m => m.drivingSchool, new { @class = "form-control", placeholder = "Автошкола" })
                        @Html.ValidationMessageFor(model => model.drivingSchool)
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputName" class="control-label col-xs-4">Инструктор</label>
                    <div class="col-xs-8">
                        @Html.TextBoxFor(m => m.instructor, new { @class = "form-control", placeholder = "Инструктор"})
                        @Html.ValidationMessageFor(model => model.instructor)
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputName" class="control-label col-xs-4">Корисничко име</label>
                    <div class="col-xs-8">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" ,placeholder = "Корисничко име"})
                        @Html.ValidationMessageFor(model => model.UserName)
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputName" class="control-label col-xs-4">E-mail</label>
                    <div class="col-xs-8">
                        @Html.TextBoxFor(m => m.mail, new { @class = "form-control" ,placeholder = "Е-mail"})
                        @Html.ValidationMessageFor(model => model.mail)
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputName" class="control-label col-xs-4">Код</label>
                    <div class="col-xs-8">
                        @Html.TextBoxFor(m => m.code, new { @class = "form-control" , placeholder = "Код"})
                        @Html.ValidationMessageFor(model => model.code)
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputName" class="control-label col-xs-4">Лозинка</label>
                    <div class="col-xs-8">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Лозинка" })
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputName" class="control-label col-xs-4">Потврди лозинка</label>
                    <div class="col-xs-8">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Потврди лозинка"})
                        @Html.ValidationMessageFor(model => model.ConfirmPassword)
                    </div>
                </div>

           

                <div class="form-group">
                    <div class=" col-md-10" style="margin-left: 200px">

                       
                        <input type="submit" class="btn btn-default" style="background-color: yellow; font-family: arial; color: black;font-weight: bold; " value="Регистрирај се" />
                    </div>
                </div>

            </form>
        </div>

        <div class="col-lg-3">



        </div>

    </div>




                        }

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
</body>


</html>
