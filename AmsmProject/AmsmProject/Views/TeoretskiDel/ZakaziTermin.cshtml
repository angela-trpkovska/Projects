@model AmsmProject.Models.TheoryPart

@{
    ViewBag.Title = "Create";
}
<p style="color:gray">asdasd</p>
<h4><center><strong>Страна за закажување на термин за полагање на теоретскиот дел за добивање на возачка дозвола</strong></center></h4>

@using (Html.BeginForm())
{   
    @Html.AntiForgeryToken()

        <hr />
        <div class="row">
            <div class="col-lg-4">
                <p style="color:grey">hidden</p>


                <div class="panel-body">
                    <div class="panel panel-info">
                        <div class="panel-heading" style="background-color: #585858; color: #d9534f"><strong>Следете не!</strong></div>


                        <p style="color:white">
                            Морате да го следите редот за полагање за возачкиот испит.Се започнува со теоретскиот дел,
                            па секој член што ќе го положи овој дел продолжува со двата практични дела.<br />
                            Затоа најпрвин изберете датум кога ќе го полагате теоретскиот дел,па после успешно положен дел
                            изберете си термин и за останатите два дела.И за нив важи истото правило. <br />
                            <h4 style="color: #d9534f"><strong>Ви посакуваме добар успех</strong></h4>
                        </p>


                    </div>
                </div>
            </div>

            <div class="col-lg-4">

                <form class="form-horizontal">
                    <p style="color:red"><b>@ViewBag.Message</b></p>
                    <div class="form-group">
                        <p><b> Изберете датум :</b> </p>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.date)
                            @Html.ValidationMessageFor(model => model.date)
                        </div>
                    </div>

                    <div class="form-group">
                        <p><b>Изберете час : </b></p>
                        <div class="col-md-10">
                            @Html.DropDownListFor(x => x.hour, new[] {
                                new SelectListItem() {Text = "08:00",Value ="8"},
                                 new SelectListItem() {Text = "10:00",Value ="10"}})
                            @Html.ValidationMessageFor(model => model.hour)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <input type="submit" style="background-color: yellow; font-family: arial; color: black;font-weight: bold; " value="Уплати" class="btn btn-default" />
                        </div>
                    </div>


                </form>
            </div>


            <br />
            <br />
            <br />
            <div class="col-lg-4">
                <table border="0" cellspacing="10" align="right">
                    <tr>
                        <td>
                            <iframe marginwidth="10"
                                    width="370"
                                    height="250"
                                    frameborder="0" style="border:0"
                                    src="https://www.google.com/maps/embed/v1/place?key=AIzaSyC8uqDJxs3IXfdPIY60TaO_OcaRpGchjGg
    &q=АМСМ+Авто+школа,Skopje+Macedonia"></iframe>
                        </td>
                    </tr>
                </table>
          </div>
        </div>
      

        
        @Html.ActionLink("Назад", "HomePage", "AmsmHome")
 
    
}

