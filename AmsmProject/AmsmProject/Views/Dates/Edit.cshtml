@model AmsmProject.Models.AmsmInfo

@{
    ViewBag.Title = "Edit";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <br />
        <h3>Измени датум  за теорија и прв практичен дел</h3>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            <p>Датум</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.date)
                @Html.ValidationMessageFor(model => model.date)
            </div>
        </div>

        <div class="form-group">
            <p>Час</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.hour)
                @Html.ValidationMessageFor(model => model.hour)
            </div>
        </div>

        <div class="form-group">
            <p>Кандидати теорија</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.candidatesTP)
                @Html.ValidationMessageFor(model => model.candidatesTP)
            </div>
        </div>

        <div class="form-group">
            <p>Кандидати практично1</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.candidatesPP1)
                @Html.ValidationMessageFor(model => model.candidatesPP1)
            </div>
        </div>

    

        <div class="form-group">
            <div class=" col-md-10">
                <input type="submit" style="background-color: yellow; font-family: arial; color: black;font-weight: bold; " value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад", "Index")
</div>
