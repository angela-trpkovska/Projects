@model AmsmProject.Models.Candidate

@{
    ViewBag.Title = "Create";
}

<h2>Внеси кандидат</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
  
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <p>Матичен број</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.EMBG)
                @Html.ValidationMessageFor(model => model.EMBG)
            </div>
        </div>

        <div class="form-group">
           <p>Име</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.firstName)
                @Html.ValidationMessageFor(model => model.firstName)
            </div>
        </div>

        <div class="form-group">
            <p>Татково име</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.parentName)
                @Html.ValidationMessageFor(model => model.parentName)
            </div>
        </div>

        <div class="form-group">
            <p>Презиме</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.lastName)
                @Html.ValidationMessageFor(model => model.lastName)
            </div>
        </div>

        <div class="form-group">
            <p>Категорија</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.category)
                @Html.ValidationMessageFor(model => model.category)
            </div>
        </div>

        <div class="form-group">
            <p>Автошкола</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.drivingSchool)
                @Html.ValidationMessageFor(model => model.drivingSchool)
            </div>
        </div>

        <div class="form-group">
           <p>Инструктор</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.instructor)
                @Html.ValidationMessageFor(model => model.instructor)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" style="background-color: yellow; font-family: arial; color: black;font-weight: bold; " value="Креирај" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад", "List")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
