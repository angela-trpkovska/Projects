@model AmsmProject.Models.Candidate

@{
    ViewBag.Title = "Edit";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <br />

        <h3>Измени информации за кандидат</h3>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.EMBG)

        <div class="form-group">
            <p>Име</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.firstName)
                @Html.ValidationMessageFor(model => model.firstName)
            </div>
        </div>

        <div class="form-group">
            <p>Татково име</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.parentName)
                @Html.ValidationMessageFor(model => model.parentName)
            </div>
        </div>

        <div class="form-group">
            <p>Презиме</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.lastName)
                @Html.ValidationMessageFor(model => model.lastName)
            </div>
        </div>

        <div class="form-group">
            <p>Категорија</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.category)
                @Html.ValidationMessageFor(model => model.category)
            </div>
        </div>

        <div class="form-group">
            <p>Автошкола</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.drivingSchool)
                @Html.ValidationMessageFor(model => model.drivingSchool)
            </div>
        </div>

        <div class="form-group">
            <p>Инструктор</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.instructor)
                @Html.ValidationMessageFor(model => model.instructor)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" style="background-color: yellow; font-family: arial; color: black;font-weight: bold; " value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад", "List")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
